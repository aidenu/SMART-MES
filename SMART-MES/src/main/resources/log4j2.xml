<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
		</Console>
		 <RollingFile name="db"
			fileName="/Users/HeeJun/work/user/logs/db.log"
			filePattern="/user/logs/db.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" fileIndex="min" />
		</RollingFile>
		<RollingFile name="db_result"
			fileName="/Users/HeeJun/work/user/logs/db_result.log"
			filePattern="/user/logs/db_result.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" fileIndex="min" />
		</RollingFile>
		<RollingFile name="db_procedure"
			fileName="/Users/HeeJun/work/user/logs/db_procedure.log"
			filePattern="/user/logs/db_procedure.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" fileIndex="min" />
		</RollingFile>
		<RollingFile name="portal"
			fileName="/Users/HeeJun/work/user/logs/portal.log"
			filePattern="/user/logs/portal.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" fileIndex="min" />
		</RollingFile>
		<RollingFile name="error"
			fileName="/Users/HeeJun/work/user/logs/error.log"
			filePattern="/user/logs/error.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" fileIndex="min" />
		</RollingFile> 
	</Appenders>
	<Loggers>
		<Logger name="java.sql" level="TRACE" additivity="false">
			<AppenderRef ref="db" />
		</Logger>
		<Logger name="jdbc.sqlonly" level="TRACE" additivity="false">
			<AppenderRef ref="db" />
		</Logger>
		<Logger name="egovframework" level="DEBUG" additivity="false">
			<AppenderRef ref="portal" />
		</Logger>
		<Logger name="db_procedure" level="DEBUG" additivity="false">
			<AppenderRef ref="db_procedure" />
		</Logger>
		<!-- log SQL with timing information, post execution -->
		<Logger name="jdbc.sqltiming" level="TRACE" additivity="false">
			<AppenderRef ref="db" />
		</Logger>
		<Logger name="org.springframework" level="INFO" additivity="false">
			<AppenderRef ref="console" />
		</Logger>
		<logger name="java.sql.Connection" level="TRACE" additivity="false">
            <appender-ref ref="db" />
        </logger>
        <logger name="java.sql.Statement" level="TRACE" additivity="false">
            <appender-ref ref="db" />
        </logger>
        <logger name="java.sql.PreparedStatement" level="TRACE" additivity="false">
            <appender-ref ref="db" />
        </logger>
        <logger name="java.sql.CallableStatement" level="TRACE" additivity="false">
            <appender-ref ref="db" />
        </logger>
        <logger name="java.sql.ResultSet" level="TRACE" additivity="false">
            <appender-ref ref="db_result" />
        </logger>
		<Root level="ERROR">
			<AppenderRef ref="error" />
		</Root>
	</Loggers>
</Configuration>
